<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">      
                <resource id="Born_WordpressBlog::word_press" title=" Word Press " sortOrder="45">
                    <resource id="Born_WordpressBlog::categories" title="Categories" sortOrder="10" />
                    <resource id="Born_WordpressBlog::posts" title="Posts" sortOrder="10" />
               </resource>

        <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Born_WordpressBlog::configuration" title=" WordpressBlog Configuration" sortOrder="45" />
                        </resource>
                    </resource>
               </resource>

           </resource>
        </resources>
    </acl>
</config>